<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Thesis Proposals</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group mr-2">
      <a href="/student/thesis/thesis-create" class="btn btn-sm btn-outline-secondary">Add Thesis Proposal</a>
    </div>
  </div>
</div>
<div>
  <table class="table table-sm">
  <thead>
    <tr>
      <th scope="col">Thesis ID</th>
      <th scope="col">Title</th>
      <th scope="col">Abstract</th>
      <th scope="col">Group #</th>
      <th scope="col">Adviser Approval</th>
      <th scope="col">Committee Approval</th>
      <th scope="col"></th> 
    </tr>
  </thead>
  <tbody>
    {{#each thesis}}
    <tr>
      <td>{{this.id}}</td>
      <th scope="row">{{this.title}}</th>
      <td>{{this.abstract}}</td>
      <td>{{this.group_id}}</td>
      {{!-- {{#if this.is_admin}}✓{{else}} {{/if}} --}}
      <td>{{#if this.adviser_approved}}✓ {{else}}{{#if this.adviser_rejected}}X {{else}}Pending {{/if}}{{/if}}</td>
      <td>
      {{#if this.committee_approved}}✓ 

      {{#if alreadyChosen}}
      {{else}} 
        <form action="/student/thesis/choose-proposal" method="POST">
          <button value="{{this.id}}" name="thesisId" type="submit">Choose Proposal</button>
        </form>
      {{/if}}

      {{else}}X{{/if}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>