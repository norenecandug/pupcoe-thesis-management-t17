<div>
  <table class="table table-sm" style="margin-left: 25%; width: 70%">
  <thead>
    <tr>
      <th scope="col">Thesis ID</th>
      <th scope="col">Title</th>
      <th scope="col">Abstract</th>
      <th scope="col">Group #</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each adviser_approval}}
    <tr>
      <td>{{this.id}}</td>
      <th scope="row">{{this.title}}</th>
      <td>{{this.abstract}}</td>
      <td>{{this.group_id}}</td>
      {{!-- {{#if this.is_admin}}âœ“{{else}} {{/if}} --}}
      <td>
        <form action="/admin/thesis/adviser-approval/approve" method="POST">
          <button value="{{this.id}}" name="thesisId" type="submit">Approve</button>
        </form>
      </td>
     <td>
        <form action="/admin/thesis/adviser-approval/reject" method="POST">
          <button value="{{this.id}}" name="thesisId" type="submit">Reject</button> 
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>