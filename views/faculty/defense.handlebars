<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2" style="margin-left: 25%;">{{type}} Defense Details</h1>
</div>
<div>
  <table class="table table-sm" style="margin-left: 25%; width: 70%">
    <thead>
      <tr>
        <th scope="col">Thesis ID</th>
        <th scope="col">Title</th>
        <th scope="col">Abstract</th>
        <th scope="col">Group #</th>
        <th scope="col">Year</th>
        <th scope="col">Schedule</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each data}}
      <tr>
        <td>{{this.thesis_id}}</td>
        <th scope="row">{{this.title}}</th>
        <td>{{this.abstract}}</td>
        <td>{{this.group_id}}</td>
        <td>{{this.year}}</td>
        <td>{{this.schedule}}</td>
        <td>
        <a href="/faculty/{{this.defense_type}}/details/{{this.id}}">Details</a>
        </td>
        <td>
          <a href="/faculty/{{this.defense_type}}/set-sched-and-panel/{{this.id}}">Set Schedule and Panel</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
