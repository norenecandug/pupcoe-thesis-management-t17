<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h3" style="margin-left: 25%;">Group {{groupData.id}} Members</h1>
  <h1 class="h3" style="margin-left: 25%;">Section {{groupData.section}}</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group mr-2">
      <button type="button" class="btn btn-sm btn-outline-secondary" data-toggle="modal" data-target="#add-students">Add Members</button>
    </div>
  </div>
</div>
<div>
  <table class="table table-sm" style="margin-left: 25%; width: 70%">
  <thead>
    <tr>
      <th scope="col">Student Number</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each group_members}}
    <tr>
      <th scope="row">{{this.student_number}}</th>
      <td>{{this.first_name}} {{this.last_name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td>
        <form action="/faculty/group/{{this.group_id}}/remove-student/{{this.student_id}}" method="POST">
          <button type="submit">Remove</button> 
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>

<div class="modal fade" id="add-students" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Select Students</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <select multiple id="student-list" data-group-id="{{groupData.id}}">
              {{#each allStudents}}
                <option value='{{this.id}}'>
                  <div><em>{{this.first_name}} {{this.last_name}}</em></div>
                  <div>{{this.email}}</div>
                </option>
              {{/each}}
          </select>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="save-group-students">Save changes</button>
      </div>
    </div>
  </div>
</div>
